<!DOCTYPE html>
<html lang="{{ LANGUAGE_CODE }}">
{% block html %}
    <head>
        {% block meta -%}
            {% include "posts/_partial/meta.jinja2" %}
        {% endblock -%}

        <title>{% block title %}{% if BLOG_TITLE %}{{ BLOG_TITLE }}{% endif %}{% endblock %}</title>

        {% block styles -%}
            {% if debug %}
            <link rel="stylesheet" href="{{ static('lib/normalize.css/normalize.css') }}" />
            {% else %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.1/normalize.css" />
            {% endif %}
            <link rel="stylesheet" href="{{ static('style.css') }}" />
        {% endblock styles -%}

        {%- block before_scripts %}{% endblock %}
    </head>

    <body>
    {%- block body %}
        <div id="header">
            {%- block header %}
                {% include "posts/_partial/header.jinja2" %}
            {%- endblock %}
        </div>

        <div class="content">
            {%- block content %}
            {%- endblock %}
        </div>

        <div id="footer">
            {%- block footer %}
                {% include "posts/_partial/footer.jinja2" %}
            {%- endblock %}
        </div>
        {%- block after_scripts %}{% endblock %}
    {% endblock body -%}
    </body>

{%- endblock html %}
</html>
